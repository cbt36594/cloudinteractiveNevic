<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="photos"
            type="com.example.cloudinteractivenevic.model.Photos" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_item_one"
            android:layout_width="100dp"
            android:layout_height="100dp"
            photoUrl = "@{photos.thumbnailUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_item_two"
            android:layout_width="100dp"
            android:layout_height="100dp"
            photoUrl = "@{photos.thumbnailUrl}"
            app:layout_constraintStart_toEndOf="@+id/img_item_one"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_item_three"
            android:layout_width="100dp"
            android:layout_height="100dp"
            photoUrl = "@{photos.thumbnailUrl}"
            app:layout_constraintStart_toEndOf="@+id/img_item_two"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_item_four"
            android:layout_width="100dp"
            android:layout_height="100dp"
            photoUrl = "@{photos.thumbnailUrl}"
            app:layout_constraintStart_toEndOf="@+id/img_item_three"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>